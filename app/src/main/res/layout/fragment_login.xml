<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/pinky">

        <EditText
            android:id="@+id/et_name"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_name"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            android:layout_height="wrap_content"
            android:hint="@string/you_password"
            android:padding="10dp" />

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/et_password"
                android:text="@string/remember_my_credential"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#660035"/>

         <Button
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:backgroundTint="@color/maron"
                android:text="@string/sign_up"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@+id/check_box"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
               />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="452dp"
            android:src="@drawable/welcome"
            app:layout_constraintTop_toBottomOf="@+id/sign_up"
           />


</androidx.constraintlayout.widget.ConstraintLayout>