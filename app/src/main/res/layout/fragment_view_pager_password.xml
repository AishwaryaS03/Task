<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewPagerPassword"
    android:background="@color/pinky">

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/old_password"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/new_password"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/old_password"
            android:hint="@string/new_password"
            android:padding="10dp" />

        <EditText
            android:id="@+id/et_password_two"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/new_password"
            android:hint="@string/retype_new_password"
            android:padding="10dp" />

        <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/et_password_two"
                android:backgroundTint="@color/maron"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/reset"/>

</androidx.constraintlayout.widget.ConstraintLayout>